<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>PasswordStringChecker</PackageId>
        <Title>Password String Security Checker</Title>
        <Description>Checks a string for conditions like mixed lower and upper case, if it contains digits, special characters or has a certain length. Also, special characters like ", / and \ can be marked as not allowed to be contained in the password string.        </Description>
        <Authors>HansenBerlin</Authors>
    </PropertyGroup>

</Project>
